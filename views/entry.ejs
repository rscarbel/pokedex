<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="author" content="Ryan Scarbel">
  <link rel="stylesheet" href="../../assets/css/skeleton.css">
  <link rel="stylesheet" href="../../assets/css/skeleton.css">
  <title>View Pokemon</title>
  <style>tr{padding-left: 12vw;padding-right: 12vw;}td{text-align: center;margin:auto;};</style>
</head>
<body>

  <div class="container">

    <h1>View Pokemon</h1>

    <button id="edit">Edit Pokemon</button>

    <form action="/pokedex" method="GET">

    <table>
        <tr><td name="name" id="name"><%=pokemonData.name%></td></tr>
        <tr><td name="index"><%=pokemonData.id%></td></tr>
        <tr><td><%=pokemonData.type[0]%></td></tr>
        <tr><td><img style="height:6em;" src="<%=pokemonData.img%>" alt="<%=pokemonData.name%> Image"></td></tr>
    </table>

    <div id="home"><input type="submit" value="Back to Home"></div>

  </form>

    <script>
      const index = <%=pokemonData.id - 1%>
      let editMode = false;
      const home = document.querySelector('#home');
      let pokemonName = '<%=pokemonData.name%>';
      const editButton = document.querySelector('#edit');
      const name = document.querySelector('#name');
      const form = document.querySelector('form');

      editButton.addEventListener('click', () => {
        if (editMode) {
          form.action = `/pokedex?name=${pokemonName}&index=${index}&_method=PUT`;
          form.method = 'POST'
          pokemonName = name.firstChild.value;
          home.innerHTML = '<input type="submit" value="Back to Home"/>'
          editButton.textContent = 'Edit Pokemon';
          name.innerHTML = pokemonName;
        } else {
          form.action = '/pokedex';
          form.method = 'GET'
          name.innerHTML = `<input type="text" value="${pokemonName}" />`
          home.innerHTML = '<a href="/pokedex"><button>Back to Home</button></a>'
          editButton.textContent = 'Save Changes';
        }
        editMode = !editMode
      })
    </script>
  </div>
</body>
</html>